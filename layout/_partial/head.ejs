<% title = (page.title && (page.title + 'ï½œ' + config.SEOTitle) || config.SEOTitle) %>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#600090">
    <meta name="msapplication-navbutton-color" content="#600090">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="#600090">

  <% if (page['header-img']){ %>
    <meta property="og:image" content="<%- (config['url'] + '/').replace(config['root'], '') + page['header-img'] %>" />
  <% } %>
    <meta property="og:image" content="<%- (config['url'] + '/').replace(config['root'], '') + config['sidebar-avatar'] %>" />
    <meta property="og:image" content="<%- config['post-default-img'] %>" />

    <%- open_graph({title: title, fb_app_id: config['fb_app_id']}) %>

    <link rel="shortcut icon" href="<%- config.favicon || 'https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-person-128.png' %>">
    <link rel="alternate" type="application/atom+xml" title="<%= config.title %>" href="/atom.xml">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link rel="stylesheet" href="//cdn.bootcss.com/font-awesome/4.6.3/css/font-awesome.css">
    <title>
        <%= title %>
    </title>

    <link rel="canonical" href="<%= config.url + config.root + (page.path || '').replace('index.html', '') %>">

    <!-- Bootstrap Core CSS -->
    <%- css('css/bootstrap.min.css') %>

    <!-- Custom CSS -->
    <%- css('css/blog-style.css') %>

    <% if (config.algolia){ %>
      <script async src="/blog/js/algolia.js"></script>
      <script async src="/blog/js/instantsearch.min.js"></script>
    <% } %>
</head>
